<script src="/static/js/jquery.daterangepicker.min.js" type="text/javascript"></script>

<script>
    $(function() {
        var datePeriod = $('#datePeriod');

        if (datePeriod.length > 0) {
            datePeriod.dateRangePicker({
                autoClose: true,
                format: 'DD.MM.YYYY',
                showShortcuts: true,
                shortcuts: {
                    'prev-days': [7, 10, 30],
                    'prev': ['week', 'month', 'year'],
                    'next-days': null,
                    'next': null
                }
            }).on('datepicker-change', function () {
                // event after date change
            });
        }



        // Get date range from the beginning of the month to the current day
        var date = new Date(),
            d = Number(date.getDate()),
            m = Number(date.getMonth()) + 1,
            y = date.getFullYear();

        d = (d < 10) ? '0'+d : d;
        m = (m < 10) ? '0'+m : m;

        var datePeriodVal = '01.'+m+'.'+y+' - '+d+'.'+m+'.'+y;

        datePeriod.val(datePeriodVal);
    });
</script>

